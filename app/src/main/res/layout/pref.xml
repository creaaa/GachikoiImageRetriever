<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout">
    <TextView
        android:text="Crawler Setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="32sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp" />

    <TextView
        android:text="Auto Collect Crawler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/holo_blue_bright" />

    <TextView
        android:text="Twitter ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="11dp" />

    <TextView
        android:text="\@"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="12dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_below="@+id/textView3"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:hint="yufu_0708" />

    <TextView
        android:text="Duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_below="@+id/editText"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:orientation="horizontal"
        android:id="@+id/RG1"
        >

        <RadioButton
            android:text="1 hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton2"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:checked="true" />

        <RadioButton
            android:text="1 day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton3"
            android:layout_weight="1"
            android:layout_marginTop="12dp" />

        <RadioButton
            android:text="OFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/OFFradioButton"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:checked="true" />

    </RadioGroup>
    </RelativeLayout>

    <TextView
        android:text="Gacha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gachaTextView"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:textColor="@android:color/holo_blue_bright"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gachaTextView"
        android:orientation="horizontal"
        android:id="@+id/RG2"
        >

        <RadioButton
            android:text="ON"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton4"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:checked="true" />

        <RadioButton
            android:text="OFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton5"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:checked="true" />
    </RadioGroup>

    <Button
        android:text="OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/OKButton"
        android:layout_below="@+id/RG2"
        android:layout_alignLeft="@+id/gachaTextView"
        android:layout_alignStart="@+id/gachaTextView"
        android:layout_marginTop="26dp" />

    <Button
        android:text="CANCEL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DismissButton"
        android:layout_alignBaseline="@+id/OKButton"
        android:layout_alignBottom="@+id/OKButton"
        android:layout_toRightOf="@+id/RG2"
        android:layout_toEndOf="@+id/RG2" />
</RelativeLayout>
